<style lang="scss">
  .app-footer {
    background: var(--color-surface-1);

    ._content {
      display: grid;
      grid-template-columns: auto minmax(0,1fr);
      gap: 1.6rem;
      align-items: start;
      padding-block: 5rem;

      @media (width < 768px) {
        display: flex;
        flex-flow: column;
        gap: 3.2rem;
        align-items: center;
        justify-content: center;
        text-align: center;
      }
    }
  }

  .app-footer-links {
    justify-self: end;
    display: flex;
    flex-wrap: wrap;
    column-gap: 4.8rem;
    row-gap: 3.2rem;

    ._group {
      display: flex;
      flex-flow: column;
      gap: .4rem;
      list-style: none;

      li {
        display: flex;
        align-items: center;
        gap: .8rem;

        &:first-child {
          font-family: var(--font-family-secondary);
          font-size: 2rem;
          font-weight: 600;
          margin-bottom: 1.2rem;
        }

        svg {
          width: 24px;
          height: 24px;
        }
      }
    }
  }

  .app-bottom-bar {
    background: var(--color-accent);
    color: var(--color-text-primary-inverse);
    text-align: center;
    padding-block: .4rem;
  }
</style>
