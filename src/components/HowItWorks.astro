---

<ul class="app-how-list">
  {
    data.map((item) => (
      <li class="_item">
        <div class="_name">{item.name}</div>
        <div class="_text" set:html={item.text} />
      </li>
    ))
  }
</ul>

<style lang="scss">
  .app-how-list {
    list-style: none;
    display: flex;
    flex-flow: column;
    gap: 2.4rem;

    ._name {
      font-size: 3.2rem;
      font-weight: 500;
      color: var(--color-accent);
      margin-bottom: 1rem;
      font-family: var(--font-family-secondary);
    }

    ._text {
      line-height: 1.5;
      text-wrap: balance;
    }
  }
